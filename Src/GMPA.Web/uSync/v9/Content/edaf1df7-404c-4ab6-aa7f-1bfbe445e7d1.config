    {
      "contentTypeKey": "f10d08d3-d4e4-4111-adeb-82ecc0e7d452",
      "udi": "umb://element/260ac40636954d31a2b25b148aa01c8f",
      "policyDocumentName": "EV Early Adoption Incentive (EEAI)",
