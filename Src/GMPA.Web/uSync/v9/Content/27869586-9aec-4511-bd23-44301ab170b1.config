  "contentData": [
    {
      "contentTypeKey": "1e64dc47-9486-4874-bae2-20baa89ebb6b",
      "udi": "umb://element/2b0c194c5c1f4fb8af1104e371a81519",
      "title": "Policy 1",
      "instrumentsText": "<p>Vat (25%) exemption for electric cars for the period 2001-2022. From 2023, Norway will add 25% VAT on purchase prices over 500,000 Norwegian Kroner. [7]</p>",
      "policyDecision": [
        "Pro-active"
      ],
      "policyOrigin": [
        "Bureaucratic"
      ],
      "typeOfPolicyInstrumentDropdown": [
        "Economic instruments - Fiscal incentives"
      ],
      "jurisdiction": [
        "National"
      ],
      "enforcementLevel": [
        "Mandatory"
      ],
      "sectoralCoverage": [
        "Transport"
      ],
      "targetGroup": [
        "Individual"
      ],
      "implementationStatus": [
        "Fully implemented"
      ],
      "startDateOfImplementation": "2001-01-01T00:00:00",
      "endDateOfImplementation": "2022-01-01T00:00:00",
      "impactLevel": [
        "High"
      ],
      "impactEvaluation": [
        "ex-post"
      ],
      "impactIndicator": "<p>The VAT exemption played a pivotal role in driving the rapid adoption of electric cars in Norway. It made electric vehicles significantly more affordable compared to their gasoline or diesel counterparts, encouraging consumers to make the switch to electric.</p>"
    },
    {
      "contentTypeKey": "1e64dc47-9486-4874-bae2-20baa89ebb6b",
      "udi": "umb://element/d6c27efbdc9b4161b0ee5490760623e5",
      "title": "Policy 2",
      "instrumentsText": "<p>Only zero emission vehicles (ZEVs) will be sold from 2022 for cars and from 2025 for city buses. [9]</p>",
