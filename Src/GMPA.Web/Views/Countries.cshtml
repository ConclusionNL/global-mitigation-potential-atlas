@using GMPA.Core.Models.Umbraco;
@model GMPA.Core.Models.ViewModels.CountriesViewModel
@{
    Layout = "MainWithNav.cshtml";
}

<link rel="stylesheet" href="/css/CountiesList.css" />

<div class="main-with-nav">
    <div style="background:#f4f7fa; padding:20px">
        <h1>All Countries</h1>
        <ul class="countries">
            @foreach (var country in Model.Countries)
            {
                @if (country.Active.First() == "True")
                {
                    <li style="color:#2c8090"><a href="@country.Url()" style="color:#2c8090; text-decoration:none">@country.Name</a></li>
                }
                else
                {
                    <li style="color:#95bfc7">@country.Name</li>
                }
            }
        </ul>
    </div>
</div>